rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can read/write their own courses
    match /users/{userId}/courses/{courseId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Chat rooms - users can read all, but write only if authenticated
    match /chatRooms/{roomId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Chat messages - users can read all, write if authenticated
    match /chatRooms/{roomId}/messages/{messageId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Contact submissions - only server can write
    match /contact_submissions/{docId} {
      allow write: if false; // Only server-side writes allowed
    }
  }
}
